<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="BaseStyle">
		<item name="android:padding">1dp</item>
		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/stock_list_text_size</item>
    </style>
    
    <style name="HeaderTextStyle" parent="BaseStyle">        
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
    </style>
    
    <style name="HeaderCompanyTextStyle" parent="BaseStyle">        
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>
    
    <style name="FormatTextStyle" parent="BaseStyle">        
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    
    <style name="HeaderNumberStyle" parent="BaseStyle">        
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="StockListTextStyle" parent="BaseStyle">
      	<item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">right</item>
    </style>    
        <style name="StockListNumberStyle" parent="BaseStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
    </style>  
</resources>
